<!--投稿一覧画面-->

<div class="container">
  <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <!--_userテンプレートファイル-->
      <%= render 'users/user',{user:@user,book:@book} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col-4">#</th>
            <th scope="col-3">Title</th>
            <th scope="col-5">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr> 
            <td>
            <!--修正中-->
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>  
